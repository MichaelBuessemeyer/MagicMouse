{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 13
  },
  "globals": {
    "process": true
  },
  "rules": {
    "no-constant-condition": ["error", { "checkLoops": false }]
  }
}
